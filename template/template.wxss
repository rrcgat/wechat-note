page {
  background: #f2f2f2;
}

.center {
  /* 左右居中 */
  justify-content: center;
  /* 上下居中 */
  align-items: center;
  text-align: center;
}

.add {
  display: flex;
  position: fixed;
  right: 60rpx;
  bottom: 65rpx;
  /* 中心点：r: 120，b: 135 */
  height: 120rpx;
  width: 120rpx;
  border-radius: 100rpx;
  background: orange;
  color: white;
  font-size: 80rpx;
  z-index: 9;
}

.touch-item {
  height: 100%;
  display: flex;
  justify-content: space-between;
  width: 100%;
  overflow: hidden;
  border-bottom: 1rpx solid #f2f2f2;
}

.content {
  background: white;
  width: 100%;
  margin-right: 0;
  /* padding: 10px; */
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(160px);
  transform: translateX(160px);
  margin-left: -160px;
}

.edit-item {
  background-color: #f2f2f2;
  width: 160px;
  height: 180rpx;
  line-height: 180rpx;
  /* display: flex; */
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(160px);
  transform: translateX(160px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.swipe .content, .swipe .edit-item {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

.edit-left {
  background: white;
  float: left;
  margin-left: 40rpx;
  margin-top: 40rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 90rpx;
  line-height: 120rpx;
}

.edit-right {
  background: white;
  float: right;
  margin-right: 40rpx;
  margin-top: 40rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 90rpx;
  line-height: 120rpx;
}

.img {
  height: 20px;
  width: 20px;
}

.mask {
  display: flex;
  position: fixed;
  top: 0%;
  left: 0%;
  width: 100%;
  height: 100%;
  background-color: black;
  z-index: 1;
  -moz-opacity: 0.7;
  opacity: 0.70;
  filter: alpha(opacity=70);
}
